import { useState } from 'react'

const ADMIN_USER = "@–≤–∞—à_—é–∑" // –í–∞—à Telegram —é–∑–µ—Ä–Ω–µ–π–º

export default function AdminPanel() {
  const [darkMode, setDarkMode] = useState(true)
  const [accounts, setAccounts] = useState([
    { id: 1, title: "–ü—Ä–µ–º–∏—É–º –∞–∫–∫–∞—É–Ω—Ç", description: "–°—Ç–∞—Ä—ã–π –∞–∫–∫–∞—É–Ω—Ç —Å –∏—Å—Ç–æ—Ä–∏–µ–π", price: 1500, active: true },
    { id: 2, title: "–ë–∞–∑–æ–≤—ã–π –∞–∫–∫–∞—É–Ω—Ç", description: "–ù–æ–≤—ã–π –∞–∫–∫–∞—É–Ω—Ç", price: 500, active: true }
  ])
  
  const [newAccount, setNewAccount] = useState({
    title: '',
    description: '',
    price: ''
  })

  const handleSubmit = (e) => {
    e.preventDefault()
    const account = {
      id: accounts.length + 1,
      ...newAccount,
      price: parseInt(newAccount.price),
      active: true,
      date: new Date().toISOString()
    }
    setAccounts([...accounts, account])
    setNewAccount({ title: '', description: '', price: '' })
  }

  const deleteAccount = (id) => {
    setAccounts(accounts.filter(acc => acc.id !== id))
  }

  const toggleActive = (id) => {
    setAccounts(accounts.map(acc => 
      acc.id === id ? { ...acc, active: !acc.active } : acc
    ))
  }

  return (
    <div className={`min-h-screen ${darkMode ? 'bg-gray-900 text-white' : 'bg-gray-50 text-black'}`}>
      {/* Sidebar */}
      <div className="flex">
        <aside className={`w-64 min-h-screen ${darkMode ? 'bg-black' : 'bg-white'} border-r p-6`}>
          <h2 className="text-xl font-bold mb-8">Admin Panel</h2>
          
          <nav>
            <ul className="space-y-4">
              <li>
                <button className="flex items-center space-x-2 w-full p-2 rounded hover:bg-gray-800">
                  <span>üìä</span>
                  <span>–û–±—ä—è–≤–ª–µ–Ω–∏—è</span>
                </button>
              </li>
              <li>
                <button className="flex items-center space-x-2 w-full p-2 rounded hover:bg-gray-800">
                  <span>üí∞</span>
                  <span>–§–∏–Ω–∞–Ω—Å—ã</span>
                </button>
              </li>
              <li>
                <button className="flex items-center space-x-2 w-full p-2 rounded hover:bg-gray-800">
                  <span>üë§</span>
                  <span>–ü—Ä–æ—Ñ–∏–ª—å</span>
                </button>
              </li>
            </ul>
          </nav>

          <div className="mt-8 p-4 rounded bg-blue-900">
            <p className="text-sm">–ì–ª–∞–≤–Ω—ã–π –∞–¥–º–∏–Ω:</p>
            <p className="font-bold">{ADMIN_USER}</p>
            <p className="text-sm mt-2">–¢–µ—Ö–ø–æ–¥–¥–µ—Ä–∂–∫–∞:</p>
            <p className="font-bold">{ADMIN_USER}</p>
          </div>
        </aside>

        {/* Main Content */}
        <main className="flex-1 p-8">
          <div className="flex justify-between items-center mb-8">
            <h1 className="text-3xl font-bold">–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –æ–±—ä—è–≤–ª–µ–Ω–∏—è–º–∏</h1>
            <button 
              onClick={() => setDarkMode(!darkMode)}
              className="px-4 py-2 border rounded"
            >
              {darkMode ? 'Light Mode' : 'Dark Mode'}
            </button>
          </div>

          {/* Add New Account Form */}
          <div className={`mb-8 p-6 rounded-lg ${darkMode ? 'bg-gray-800' : 'bg-white'} border`}>
            <h2 className="text-2xl font-bold mb-4">–î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤–æ–µ –æ–±—ä—è–≤–ª–µ–Ω–∏–µ</h2>
            <form onSubmit={handleSubmit} className="space-y-4">
              <input
                type="text"
                placeholder="–ù–∞–∑–≤–∞–Ω–∏–µ –∞–∫–∫–∞—É–Ω—Ç–∞"
                value={newAccount.title}
                onChange={(e) => setNewAccount({...newAccount, title: e.target.value})}
                className={`w-full p-2 border rounded ${darkMode ? 'bg-gray-700' : 'bg-white'}`}
                required
              />
              
              <textarea
                placeholder="–û–ø–∏—Å–∞–Ω–∏–µ"
                value={newAccount.description}
                onChange={(e) => setNewAccount({...newAccount, description: e.target.value})}
                className={`w-full p-2 border rounded ${darkMode ? 'bg-gray-700' : 'bg-white'}`}
                rows="3"
                required
              />
              
              <input
                type="number"
                placeholder="–¶–µ–Ω–∞ (‚ÇΩ)"
                value={newAccount.price}
                onChange={(e) => setNewAccount({...newAccount, price: e.target.value})}
                className={`w-full p-2 border rounded ${darkMode ? 'bg-gray-700' : 'bg-white'}`}
                required
              />
              
              <button 
                type="submit"
                className="px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700"
              >
                –î–æ–±–∞–≤–∏—Ç—å –æ–±—ä—è–≤–ª–µ–Ω–∏–µ
              </button>
            </form>
          </div>

          {/* Accounts List */}
          <div className="overflow-x-auto">
            <table className="w-full border-collapse">
              <thead>
                <tr className={`border-b ${darkMode ? 'border-gray-700' : 'border-gray-300'}`}>
                  <th className="text-left p-4">ID</th>
                  <th className="text-left p-4">–ù–∞–∑–≤–∞–Ω–∏–µ</th>
                  <th className="text-left p-4">–û–ø–∏—Å–∞–Ω–∏–µ</th>
                  <th className="text-left p-4">–¶–µ–Ω–∞</th>
                  <th className="text-left p-4">–°—Ç–∞—Ç—É—Å</th>
                  <th className="text-left p-4">–î–µ–π—Å—Ç–≤–∏—è</th>
                </tr>
              </thead>
              <tbody>
                {accounts.map(account => (
                  <tr key={account.id} className={`border-b ${darkMode ? 'border-gray-700' : 'border-gray-300'}`}>
                    <td className="p-4">{account.id}</td>
                    <td className="p-4 font-medium">{account.title}</td>
                    <td className="p-4 max-w-xs truncate">{account.description}</td>
                    <td className="p-4">{account.price} ‚ÇΩ</td>
                    <td className="p-4">
                      <span className={`px-2 py-1 rounded ${account.active ? 'bg-green-500' : 'bg-red-500'}`}>
                        {account.active ? '–ê–∫—Ç–∏–≤–Ω–æ' : '–ù–µ –∞–∫—Ç–∏–≤–Ω–æ'}
                      </span>
                    </td>
                    <td className="p-4 space-x-2">
                      <button 
                        onClick={() => toggleActive(account.id)}
                        className="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600"
                      >
                        {account.active ? '–°–∫—Ä—ã—Ç—å' : '–ü–æ–∫–∞–∑–∞—Ç—å'}
                      </button>
                      <button 
                        onClick={() => deleteAccount(account.id)}
                        className="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600"
                      >
                        –£–¥–∞–ª–∏—Ç—å
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
  )
}
